<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
>
    <system:String x:Key="ThemeName">Light</system:String>
    <Color x:Key="BackgroundColor" >White</Color>
    <Color x:Key="DisabledForegroundColor">#FF333333</Color>
    <Color x:Key="BackgroundHighlightColor">#FF666666</Color>
    <Color x:Key="ForegroundColor">Black</Color>
    <SolidColorBrush x:Key="Background" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundHighlight" Color="{StaticResource BackgroundHighlightColor}" />
    <SolidColorBrush x:Key="DisabledForeground" Color="{StaticResource DisabledForegroundColor}"/>
    <SolidColorBrush x:Key="Foreground" Color="{StaticResource ForegroundColor}" />
</ResourceDictionary>